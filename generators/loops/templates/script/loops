#!/usr/bin/env ruby

vendored_loops_binary = Dir[File.join(File.dirname(__FILE__),
                                         '..',
                                         'vendor',
                                         '{gems,plugins}',
                                         'loops*',
                                         'bin',
                                         'loops')].first

if vendored_loops_binary
  load File.expand_path(vendored_loops_binary)
else
  require 'rubygems' unless ENV['NO_RUBYGEMS']
  require 'loops'
  load Loops::BINARY
end
